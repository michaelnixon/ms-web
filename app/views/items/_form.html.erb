<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, size: 60 %>
  </div>
  <div class="field">
    <%= f.label :preview %><br/>
	<em>The preview is a small block of text that shows up in short contexts</em><br/>
    <%= f.text_area :preview, size: "60x12" %>
  </div>
  <div class="field">
    <%= f.label :body %><br/>
	<em>The body is the full text that shows up when an item has been fully selected</em><br/>
    <%= f.text_area :body, size: "60x12" %>
  </div>
  <div class="field">
	<%= f.label :category %>
	<%= f.collection_select :category_id, @categories, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
