<h1>Listing users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Email</th>
	    <th colspan="2"></th>	
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td style="width:1%; white-space:nowrap;"><%= link_to raw("<span class='glyphicon glyphicon-edit'></span>"), [:edit, :admin, user] %><%= link_to raw("<span class='glyphicon glyphicon-trash'></span>"), [:admin, user], method: :delete, data: { confirm: 'Are you sure?' } %><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_admin_user_path %><br/>
<%= link_to raw("<span class='glyphicon glyphicon-arrow-left'>Back</span>"), admin_path %>