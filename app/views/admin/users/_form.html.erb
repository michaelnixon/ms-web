<%= form_for([:admin, @user], :html => { role: "form"}) do |f| %>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <div class="field form-group">
    <%= f.label :email, class: "control-label" %>
    <%= f.text_field :email, size: 100, class: "form-control", placeholder: "Enter email" %>
  </div>
  <div class="field form-group">
    <%= f.label :password, class: "control-label" %>
    <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
		<span class="help-block">The password must: contain a digit from 0-9, one lowercase character, one uppercase character, one special symbol in the list '@#$%', and have a length of at least 6 characters and a maximum of 20 characters.</span>
  </div>
  <div class="field form-group">
    <%= f.label :password_confirmation, class: "control-label" %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repeat the password" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
